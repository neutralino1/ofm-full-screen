<div class="new-page">
<h2 class="istok">Create a new page</h2>
<div class="track-summary">
<div class="fleft">
  <%= link_to "", "javascript://", :class => "button large loading
  fleft #{@track.id}-track", :id => "#{@track.id}-track",
  :title => "Play music by #{@track.artist_string}" %>
</div>
<div class="fleft track-info">
<div class="track-name"><%= @track.title %></div>
<div class="artist-name"><%= @track.artist_string %></div>
</div>
<img src="<%= @track.picture_absolute_url %>" class="fright">
<div class="fclear"></div>
<%= form_for(@page) do |f| %>
<table>
<tr><td>Facebook page :</td><td><%= f.text_field :facebook %></td></tr>
<tr><td>Twitter handle :</td><td><%= f.text_field :twitter
				     %></td></tr>
<tr><td>MySpace page :</td><td><%= f.text_field :myspace %></td></tr>
<tr><td>Custom URL :</td><td><%= f.text_field :custom %></td></tr>
<tr><td></td><td></td></tr>
</table>
<% end %>
</div>
</div>
