<!DOCTYPE html>
<html>
<head>
  <title>OfmFullScreen</title>
  <%= javascript_include_tag "jquery-1.6.2.min" %>
  <%= javascript_include_tag "player_api" %>
  <%= javascript_include_tag 'application', 'main', 'player' %>
  <script type="text/javascript">
    OFMFS.loggedIn = <%= current_user ? 'true' : 'false' %>
  </script>
  <%= stylesheet_link_tag 'shared', 'main' %>
  <%= csrf_meta_tag %>
</head>
<body>
<%= render 'layouts/header' %>
<div id="main">
<div id="main-content">
<%= yield %>
</div>
</div>
<%= render 'layouts/footer' %>
<div id="pending" class="hidden"><%= image_tag 'spinner1.gif' %></div>
</body>
</html>
